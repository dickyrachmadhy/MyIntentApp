<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="10dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_move_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/BZ1"
            android:text="@string/move_activity" />

        <Button
            android:id="@+id/btn_move_activity_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/move_with_data"
            android:backgroundTint="@color/BZ2"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_move_activity_object"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/move_with_object"
            android:backgroundTint="@color/BZ3"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_MyRecylerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/my_recycle"
            android:backgroundTint="@color/BZ4"
            android:textStyle="bold"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_dial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/BH6"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="200dp"
        android:text="@string/dial_number"
        android:textSize="8dp"
        android:textStyle="bold|italic" />

</LinearLayout>